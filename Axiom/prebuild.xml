			<Reference name="System.Xml" />
			<Reference name="Axiom.Engine" localCopy="true"/>
			<Reference name="Axiom.MathLib" localCopy="true"/>
			<Reference name="Tao.Cg" localCopy="true" />
			
			<Files>
				<Match pattern="*.cs" path="." />
			</Files>
		</Project>
		<Project 
			name="Axiom.Plugins.ParticleFX" 
