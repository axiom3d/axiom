    </member>
    <member name="F:System.MidpointRounding.AwayFromZero">
      <dduexml xmlns="http://ddue.schemas.microsoft.com/authoring/2003/5">
        <summary>
          <para>When a number is halfway between two others, it is rounded toward the nearest number that is away from zero.</para>
        </summary>
      </dduexml>
    </member>
    <member name="F:System.MidpointRounding.ToEven">
      <dduexml xmlns="http://ddue.schemas.microsoft.com/authoring/2003/5">
        <summary>
