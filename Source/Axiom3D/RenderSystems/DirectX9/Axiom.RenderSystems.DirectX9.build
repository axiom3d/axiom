<?xml version="1.0"?>
<project name="Axiom.RenderSystems.DirectX9" default="build">
	<!--
		Member of the core Axiom3D build
		Axiom references should refer to the build dir listed below
		
		Required properties:
			* axiom3d.build.dir     - (path) root level to build to
			* build.debug           - (true|false) debug build?
			* current.build.defines - framework-specific build defines
	-->
	<target name="build">

		<property name="unsafe" value="true" />
		<property name="warnaserror" value="false"/>
		<property name="warninglevel" value="1"/>
		<property name="verbose" value="false" />
	 
		<!-- build it -->
		<csc target="library" define="${current.build.defines}" warnaserror="${warnaserror}" warninglevel="${warninglevel}" debug="${build.debug}" unsafe="${unsafe}" verbose="${verbose}" output="${axiom3d.build.dir}/${project::get-name()}.dll" doc="${axiom3d.build.dir}/${project::get-name()}.xml">
			<nowarn>
				<!-- do not report warnings for missing XML comments -->
				<warning number="1591" />
				<!-- do not report deprecation warnings -->
				<warning number="0618" />
				<warning number="1570" />
			</nowarn>
			<sources failonempty="true">
				<include name="**/*.cs" />
				<!-- common assembly-level attributes -->
				<!-- <include name="../CommonAssemblyInfo.cs" /> -->
			</sources>
		<!--
			<resources prefix="Axiom.RenderSystems.DirectX9" dynamicprefix="true">
				<include name="Resources/**/*" />
			</resources>
			-->
			<!-- Note: Updated to use beta MDX - only uses a single dll, not 3 -->
			<!-- Pre-beta-2.0 MDX dlls 
				<include name="${directx.dir}/Microsoft.DirectX.Direct3D.dll"/>
				<include name="${directx.dir}/Microsoft.DirectX.Direct3DX.dll"/>
				<include name="${directx.dir}/Microsoft.DirectX.dll"/>
			-->

			<references>
				<include name="${axiom3d.build.dir}/Axiom.dll"/>
				<include name="${directx.dir}/Microsoft.DirectX.dll"/>
				<include name="System.dll"/>
				<include name="System.Data.dll"/>
				<include name="System.Drawing.dll"/>
				<include name="System.Windows.Forms.dll"/>
				<include name="System.Xml.dll"/>
			</references>
		</csc>
	</target>
</project>
