<?xml version="1.0" encoding="utf-8" ?>
<Prebuild xmlns="http://dnpb.sourceforge.net/schemas/prebuild-1.7.xsd" version="1.7">
    <Solution name="Axiom_Chess" path=".">
		<Configuration name="Debug">
			<Options>
				<IncrementalBuild>true</IncrementalBuild>
				<CompilerDefines>DEBUG;TRACE</CompilerDefines>
				<OptimizeCode>false</OptimizeCode>
				<AllowUnsafe>true</AllowUnsafe>
				<DebugInformation>true</DebugInformation>
				<WarningLevel>0</WarningLevel>
			</Options>
		</Configuration>
		<Configuration name="Release">
			<Options>
				<CompilerDefines>TRACE</CompilerDefines>
				<OptimizeCode>true</OptimizeCode>
				<AllowUnsafe>true</AllowUnsafe>
				<DebugInformation>false</DebugInformation>
				<WarningLevel>0</WarningLevel>
			</Options>
		</Configuration>

		<Files>
			<Match pattern="*.build" path="." recurse="true" />
		</Files>

		<Project name="Axiom_Chess" type="Exe" path="." language="C#" runtime="Microsoft" >		
			<Configuration name="Debug">
				<Options>
					<OutputPath>build/debug</OutputPath>
					<AllowUnsafe>true</AllowUnsafe>
				</Options>
			</Configuration>
			<Configuration name="Release">
				<Options>
					<OutputPath>build/release</OutputPath>
					<AllowUnsafe>true</AllowUnsafe>
				</Options>
			</Configuration>

			<ReferencePath>Dependencies/Axiom3D</ReferencePath>
			<ReferencePath>Dependencies/CeGui#</ReferencePath>
			<ReferencePath>Dependencies/Tao</ReferencePath>
			<ReferencePath>Dependencies/ICSharpCode</ReferencePath>

			<Reference name="Axiom" />
			<Reference name="Axiom.Plugins.ParticleFX" />
			<Reference name="Axiom.Plugins.CgProgramManager" />
			<Reference name="Axiom.RenderSystems.OpenGL" />

			<?if OS = "Win32" ?>
				<Reference name="Axiom.Platforms.Win32" />
				<Reference name="Axiom.RenderSystems.DirectX9" />
			<?else ?>
				<Reference name="Axiom.Platforms.SDL" />
			<?endif ?>

			<Reference name="CeGui" />
			<Reference name="CeGui.Renderers.Axiom" />
			<Reference name="CeGui.WidgetSets.Taharez" />
			<Reference name="CeGui.WidgetSets.Windows" />
			<Reference name="CeGui.WidgetSets.Suave" />

			<Reference name="System" />
			<Reference name="System.Data" />
			<Reference name="System.Windows.Forms" />
			<Reference name="System.Drawing" />
			<Reference name="System.Xml" />

			<Files>
				<Match pattern="./AI/*.cs" path="." recurse="true"/>
				<Match pattern="./ColDet/*.cs" path="." recurse="true"/>
				<Match pattern="./Main/*.cs" path="." recurse="true"/>
				<Match pattern="./Hand/*.cs" path="." recurse="true"/>
				<Match pattern="./States/*.cs" path="." recurse="true"/>
				<Match pattern="Main.cs" path="." />
				<Match pattern="AssemblyInfo.cs" path="." />
				<Match pattern="EngineConfig.xml" path="" buildAction="None" copyToOutput="Always" />
			</Files>
		</Project>


    </Solution>
</Prebuild>
